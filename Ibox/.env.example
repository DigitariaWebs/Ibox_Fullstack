# iBox Mobile App Environment Variables
# Copy this file to .env and customize for your environment

# Backend API Configuration (Optional)
# If not set, the app will automatically discover the backend on your network
# Set this if you want to use a specific backend URL (useful for testing)
# Examples:
# - For specific IP: EXPO_PUBLIC_API_URL=http://192.168.1.25:5000/api/v1
# - For production: EXPO_PUBLIC_API_URL=https://api.ibox.com/api/v1
# - For staging: EXPO_PUBLIC_API_URL=https://staging-api.ibox.com/api/v1
EXPO_PUBLIC_API_URL=

# Google Maps API Key (Required for maps functionality)
# Get your API key from: https://console.cloud.google.com/
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=

# Firebase Configuration (Required for push notifications)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# Development Settings
# Set to 'true' to enable debug mode with extra logging
EXPO_PUBLIC_DEBUG_MODE=false

# Feature Flags (Optional)
# Enable/disable features during development
EXPO_PUBLIC_ENABLE_MOCK_DATA=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true