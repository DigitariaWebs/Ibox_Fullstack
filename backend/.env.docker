# Docker Environment Configuration for iBox Backend
# This file contains environment variables for Docker Compose setup

# Application Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://ibox_user:ibox_password_123@mongodb:27017/ibox_dev?authSource=ibox_dev
MONGODB_URI_ROOT=mongodb://admin:admin123@mongodb:27017/ibox_dev?authSource=admin

# Redis Configuration
REDIS_URL=redis://:redis123@redis:6379/0
REDIS_PASSWORD=redis123

# JWT Configuration
JWT_SECRET=super-secret-jwt-key-change-in-production-2025
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=super-secret-session-key-change-in-production-2025

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000,http://localhost:19006
ADMIN_URL=http://localhost:3001

# Email Configuration (using Mailhog for development)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ibox.local

# Firebase Configuration (for Google Auth)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
FIREBASE_DATABASE_URL=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# External Services
GOOGLE_MAPS_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Development Settings
ENABLE_CORS=true
TRUST_PROXY=true
PRETTY_PRINT_JSON=true

# Database Seeds (for development)
SEED_DATABASE=true
CREATE_SAMPLE_DATA=true